#! /usr/bin/bash

export LC_COLLATE=C 


DB=$1
ls DBs/$DB | grep -v '^schema_' # List all files not starting with schema_ (table files only)

read -p "Enter the Table you want to rename : " oldname

if [[ -f DBs/$DB/$oldname ]]; then
    read -p "Enter new name : " NewName
    mv DBs/$DB/schema_$oldname DBs/$DB/schema_$NewName
    mv DBs/$DB/$oldname DBs/$DB/$NewName
    echo Table renamed successfully with !!
    
else
    echo Wrong table name
    source ./TableScripts/TableMenu.sh
    
fi
